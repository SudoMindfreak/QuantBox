{
    "name": "quantbox",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "quantbox-core",
        "quantbox-server",
        "quantbox-ui"
    ],
    "scripts": {
        "dev:server": "npm run dev --workspace=quantbox-server",
        "dev:ui": "npm run dev --workspace=quantbox-ui",
        "dev:core": "npm run dev --workspace=quantbox-core",
        "dev": "npm-run-all --parallel dev:server dev:ui",
        "build:server": "npm run build --workspace=quantbox-server",
        "build:ui": "npm run build --workspace=quantbox-ui",
        "build": "npm-run-all build:server build:ui",
        "db:generate": "npm run db:generate --workspace=quantbox-server",
        "db:migrate": "npm run db:migrate --workspace=quantbox-server",
        "db:studio": "npm run db:studio --workspace=quantbox-server"
    },
    "devDependencies": {
        "npm-run-all": "^4.1.5"
    }
}